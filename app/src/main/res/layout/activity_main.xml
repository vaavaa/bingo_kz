<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".main"
    android:orientation="horizontal"
    android:keepScreenOn="true">
    <kz.regto.bingo.CellLayout
        android:id="@+id/cell_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        cl:columns="200"
        cl:spacing="1dp"
        tools:context=".MainActivity" >

        <!-- Начало первой строки -->
        <kz.regto.bingo.TwoTextViews
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            cl:color_text="@color/first_line_label"
            cl:size_text="@dimen/f1st_row"
            cl:label_text="Cайт:"
            cl:field_text="www.BingoCard.kz"
            cl:layout_cellsHeight="@integer/first_row_height"
            cl:layout_cellsWidth="60"
            cl:layout_left="0"
            cl:layout_top="0"/>
        <kz.regto.bingo.TwoTextViews
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            cl:color_text="@color/first_line_label"
            cl:size_text="@dimen/f1st_row"
            cl:label_text="Устройство:"
            cl:field_text="185519"
            cl:layout_cellsHeight="@integer/first_row_height"
            cl:layout_cellsWidth="45"
            cl:layout_left="155"
            cl:layout_top="0"/>
        <!-- Конец первой строки -->
        <!-- Начало второй строки -->
        <kz.regto.bingo.TwoTextViews
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            cl:color_text="@color/second_line_label"
            cl:size_text="@dimen/s2nd_row"
            cl:label_text="Баланс:"
            cl:field_text="18000"
            cl:layout_cellsHeight="@integer/second_row_height"
            cl:layout_cellsWidth="30"
            cl:layout_left="0"
            cl:layout_top="@integer/first_row_height"/>
        <kz.regto.bingo.TwoTextViews
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            cl:color_text="@color/second_line_label"
            cl:size_text="@dimen/s2nd_row"
            cl:label_text="Выйгрыш:"
            cl:field_text="10000"
            cl:layout_cellsHeight="@integer/second_row_height"
            cl:layout_cellsWidth="35"
            cl:layout_left="40"
            cl:layout_top="@integer/first_row_height"/>
        <kz.regto.bingo.TwoTextViews
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            cl:color_text="@color/second_line_label"
            cl:size_text="@dimen/s2nd_row"
            cl:label_text="Ставка:"
            cl:field_text="2000"
            cl:layout_cellsHeight="@integer/second_row_height"
            cl:layout_cellsWidth="35"
            cl:layout_left="85"
            cl:layout_top="@integer/first_row_height"/>

        <RelativeLayout  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:layout_centerHorizontal="true"
            cl:layout_cellsHeight="@integer/second_row_height"
            cl:layout_cellsWidth="100"
            cl:layout_left="100"
            cl:layout_top="@integer/first_row_height">
            <TextView
                android:id="@+id/timerValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:text="@string/timerVal" />
            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@+id/timerValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/timerValue"
                android:layout_alignRight="@id/timerValue"
                android:indeterminate="false"
                android:padding="1dp" >
            </ProgressBar>
        </RelativeLayout>

    </kz.regto.bingo.CellLayout>

</FrameLayout>