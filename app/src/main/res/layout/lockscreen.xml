<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/lock_frame"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_gravity="center">
    <ImageButton
        android:id="@+id/ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/lock"
        android:background="@null"
        android:onClick="unlocked"/>
    <EditText
        android:id="@+id/n_path"
        android:inputType="text"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_margin = "17dp"
        android:maxLength="250"
        android:textSize="@dimen/s2nd_row"
        android:layout_gravity="left"
        android:imeOptions="actionDone" />
    <EditText
        android:id="@+id/pin"
        android:inputType="numberPassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_marginTop="17dp"
        android:maxLength="4"
        android:textSize="@dimen/s2nd_row"
        android:layout_gravity="right"
        android:imeOptions="actionDone"/>
    <TextView
        android:id="@+id/WinLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/f1st_row"
        android:layout_gravity="bottom"
        android:text="К выплате:"
        android:layout_margin = "17dp"
        android:visibility="invisible"
        android:maxLength="150" />
    <TextView
        android:id="@+id/WinFigure"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s2nd_row"
        android:text="130000"
        android:layout_gravity="bottom"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="17dp"
        android:visibility="invisible"
        android:alpha="1"
        android:maxLength="150" />
</FrameLayout>